package may18;

public class Practice {

	public static void main(String[] args) {
		
		int apple, pineapple, pen;
		apple = 1;
		pineapple = 2;
		pen = 3;
		
		int total = apple + pineapple + pen;
		
		float avg = (float) (total/ 24.0);
		System.out.println("총 생산 수 : " + total);
		System.out.println("시간당 생산 갯수 : " + avg);
	}
}
